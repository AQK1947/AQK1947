import pandas as pd

def compare_csv_files(file1_path, file2_path):
    df1 = pd.read_csv(file1_path)
    df2 = pd.read_csv(file2_path)

    # Find differences between the two dataframes
    differences = df1[df1.ne(df2).any(axis=1)]

    return differences

file1_path = 'file1.csv'
file2_path = 'file2.csv'
differences = compare_csv_files(file1_path, file2_path)

# Save differences to a new CSV file
output_path = 'differences.csv'
differences.to_csv(output_path, index=False)

print(f"Differences saved to '{output_path}'")
